<!DOCTYPE html>
<html>
<head>
  <title>Concern</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <style>
    html,body{
      background-color: #E8E5D3;
      font-family: 'PT Sans', Helvetica, Arial, 'Liberation Sans', FreeSans, sans-serif;;
    }
    body {
      margin:0; padding:0px;
      text-align:center;
      }
    #content {
      width:900px;
      margin:0px auto;
      text-align:left;
      }
    td, th {text-align: right;}
    select{width: 150px;}
    header{
      background-color: #00734A;
      padding: 5px;
      width: 890px;
      color: white;
      margin-bottom: 10px;
    }
    #logo {padding: 20px;}
  </style>
</head>
<body>
<div id="content">
<% if flash[:notice] %>
  <div style="background-color: black; color: white; padding: 7px; margin-top: 5px; margin-bottom: 7px;">
    <%= flash[:notice] %>
  </div>
<% end %>
<%= yield %>
<% unless session[:key].blank? %>
<div style="padding: 10px 0 0 0; font-size: 9pt; text-align: center">
  <p>
    <%= link_to "Admin", :controller => 'admin', :action => 'index' %> |
    <%= link_to "List data", :controller => 'admin', :action => 'list' %> |
    <%= link_to "Import data", :controller => 'admin', :action => 'import' %> |
    <%= link_to "Chart categorical data", :controller => 'tools', :action => 'bar' %> |
    <%= link_to "Chart numerical data", :controller => 'tools', :action => 'line' %> |
    <%= link_to "Logout", :controller => 'admin', :action => 'logout' %>
  </p>
  <p>
    Page loaded <%= Time.now.strftime('%c') %>
  </p>
</div>
<% end %>
</div>
</body>
</html>
